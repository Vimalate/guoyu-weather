/* pages/about/about.wxss */
page {
  -webkit-font-smoothing: antialiased;
  background: #f5f5f5;
  font-family: "PingHei","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif";
}
.about{
  min-height: 100vh;
}
swiper-item image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 40rpx;
}
swiper-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title{
  font-size: 28rpx; 
  margin: 40rpx 0;
}
swiper{
  height: 380rpx;
  background-color: #fff;
}
.item{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin: 30rpx 0;
  padding: 30rpx;
}
.item_img image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.item_img{
  display: flex;
  align-items: center;

}

.i{
  margin: 30rpx 0;
  font-size: 32rpx;
  color: #666
}
.item_title{
  font-size: 36rpx;
  color: #87CEFA;
}
.item_i{
  margin: 20rpx 0 0 80rpx;
  font-size: 28rpx;
}
.author{
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 24rpx;
  margin-bottom: 10rpx;
}