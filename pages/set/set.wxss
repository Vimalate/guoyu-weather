/* pages/set/set.wxss */
page {
  -webkit-font-smoothing: antialiased;
  background: #f5f5f5;
  font-family: "PingHei","Helvetica Neue","Helvetica","Arial","Verdana","sans-serif";
}
.version image {
  width: 80rpx;
  height: 80rpx;
  margin: 60rpx 0 15rpx 0;
}
.version{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}
.version-title{
  font-size: 24rpx;
}
.set{
  margin: 0 15rpx 25rpx 15rpx;
  background-color: #fff;
}
.set_item{
  display: flex;
  padding:0 20rpx;
  height: 100rpx;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
}
.value{
  font-size: 26rpx;
  color: #666;
  margin-left: 40rpx;
}
.set_item image{
  width: 25rpx;
  height: 25rpx;
}
.set_item text{
  font-size: 28rpx;
  color: #666;
}
.title{
  display: flex;
  padding: 20rpx 0;
}
.title image{
  width: 30rpx;
  height: 30rpx;
  margin: 10rpx 20rpx;

}
.screenBrightness{
  padding: 35rpx 0 10rpx 0;
  font-size: 28rpx;
  height: 120rpx;
}
.screenBrightness text{
  margin-left: 26rpx;
}
.set_screenBrightness{
  display: flex;
  justify-content: space-between;
  padding:15rpx 20rpx;
  /* align-items: center; */
  color: #333;
  font-size: 32rpx;
}
.now{
  display: flex;
  align-items: center; 
}
.wx-switch-input{width:84rpx !important;height:43rpx !important;}
.wx-switch-input::before{width:82rpx !important;height: 38rpx !important;}
.wx-switch-input::after{width: 38rpx !important;height: 38rpx !important;}